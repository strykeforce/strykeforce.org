body
  padding: 0
  margin: 0
  position: relative
  font-size: $font_size

.main
  background: white

.container
  box-sizing: border-box
  position: relative
  max-width: $container_width
  padding: 0 $small_space
  margin: 0 auto

  @media (--tablet-portrait-up)
    padding: 0 $medium_space

  @media (--tablet-landscape-up)
    padding: 0 $large_space

  > p
    max-width: $content_width
    margin: auto

  &::after,
  &::before
    content: ""
    display: table
    clear: both

.header-menu
  display: flex
  flex-direction: column
  width: auto
  padding: 0
  margin: 0

  @media (--tablet-portrait-up)
    flex-direction: row

  > .item
    list-style: none
    padding: 0 0 var(--extra-small-space)

    @media (--tablet-portrait-up)
      padding: 0 var(--small-space)

  > .item > .link
    text-decoration: none
    font-weight: bold
    font-size: 120%
    color: var(--black)

    &.-active
      color: white
